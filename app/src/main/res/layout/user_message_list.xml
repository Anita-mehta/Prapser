<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/space5"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/space5"
    android:id="@+id/message_user"
    android:layout_marginStart="5dp"
    android:layout_marginEnd="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/space20"
        android:paddingEnd="@dimen/space20"
        android:paddingTop="@dimen/space12"
        android:paddingBottom="@dimen/space12">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/chat_user_image"
            android:layout_width="@dimen/space65"
            android:layout_height="@dimen/space65"
            android:src="@drawable/men"/>
        <TextView
            android:layout_width="@dimen/space20"
            android:layout_height="@dimen/space20"
            android:text="1"
            android:layout_toRightOf="@id/chat_user_image"
            android:textColor="@color/white"
            android:layout_marginLeft="-15dp"
            android:layout_marginTop="@dimen/space40"
            android:gravity="center"
            android:background="@drawable/red_circle"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/chat_user_image">

            <TextView
                android:id="@+id/name_user_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Upkar Singh"
                style="@style/textHeading"
                android:fontFamily="@font/human"
                android:textStyle="bold"
                android:textSize="@dimen/text14"
                android:layout_marginStart="@dimen/space20"
                android:layout_marginLeft="@dimen/space20" />

            <TextView
                android:id="@+id/message_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Hello, how are you"
                android:visibility="visible"
                android:layout_marginTop="@dimen/space3"
                style="@style/textNormal"
                android:fontFamily="@font/human"
                android:textSize="13sp"
                android:layout_marginStart="@dimen/space20"
                android:layout_marginLeft="@dimen/space20" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Typing..."
                android:visibility="gone"
                android:textColor="@color/red"
                android:layout_marginTop="@dimen/space3"
                style="@style/textNormal"
                android:textSize="@dimen/space18"
                android:layout_marginStart="@dimen/space20"
                android:layout_marginLeft="@dimen/space20" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="@dimen/space4"
            android:layout_alignParentRight="true">

            <TextView
                android:id="@+id/date_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="start"
                android:text="10 Aug"
                style="@style/textNormal"
                android:fontFamily="@font/human"
                android:textSize="@dimen/text14"
                android:layout_marginStart="@dimen/space20"
                android:layout_marginLeft="@dimen/space20"
                android:layout_marginRight="@dimen/text10" />


            <RelativeLayout
                android:id="@+id/msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="end"
                android:layout_marginTop="@dimen/space5"
                android:layout_marginEnd="@dimen/space5"
                android:layout_marginRight="@dimen/space5">
            </RelativeLayout>


        </LinearLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/space2"
        android:background="@color/greyDark"
        android:layout_marginVertical="@dimen/space5"/>

</LinearLayout>