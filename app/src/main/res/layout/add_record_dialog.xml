<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/space10"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Take a photo"
            android:layout_marginTop="@dimen/space20"
            android:layout_marginHorizontal="@dimen/space16"
            android:fontFamily="@font/human"
            style="@style/textNormal"
            android:padding="@dimen/space8"
            android:drawablePadding="@dimen/space10"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_baseline_photo_camera_24"/>
        <TextView
            android:id="@+id/gallery_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload from gallery"
            android:padding="@dimen/space8"
            android:layout_marginHorizontal="@dimen/space16"
            android:fontFamily="@font/human"
            style="@style/textNormal"
            android:layout_marginTop="@dimen/space10"
            android:drawablePadding="@dimen/space8"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:drawableLeft="@drawable/gallery"/>
        <TextView
            android:id="@+id/upload_file_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload Files"
            android:padding="@dimen/space8"
            android:layout_marginHorizontal="@dimen/space16"
            android:fontFamily="@font/human"
            style="@style/textNormal"
            android:layout_marginTop="@dimen/space10"
            android:drawablePadding="@dimen/space8"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/space30"
            android:drawableLeft="@drawable/document_img"/>


    </LinearLayout>



</com.google.android.material.card.MaterialCardView>